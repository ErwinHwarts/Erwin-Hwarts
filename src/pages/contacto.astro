---
import Layout from "../layouts/Layout.astro";
import ContactInfo from "../components/ContactInfo.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout title="Contacto - Tesla Chile">
    <section class="bg-gray-950 text-white py-20 px-6">
        <div class="max-w-5xl mx-auto text-center mb-12">
            <h2 class="text-4xl font-bold mb-4">Contáctanos</h2>
            <p class="text-gray-300">¿Tienes preguntas? Escríbenos.</p>
        </div>

        <div
            class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 grid md:grid-cols-2 gap-10"
        >
            <ContactInfo />
            <ContactForm />
        </div>
    </section>
</Layout>

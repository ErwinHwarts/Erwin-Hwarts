<form class="bg-gray-900 p-8 rounded-2xl space-y-6">
  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <label for="name" class="block text-sm font-medium mb-2">Nombre(s)</label>
      <input type="text" id="name" name="name" required
        class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 focus:ring-2 focus:ring-yellow-400 focus:outline-none">
    </div>

    <div>
      <label for="lastname" class="block text-sm font-medium mb-2">Apellido(s)</label>
      <input type="text" id="lastname" name="lastname" required
        class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 focus:ring-2 focus:ring-yellow-400 focus:outline-none">
    </div>

    <div>
      <label for="email" class="block text-sm font-medium mb-2">Correo electrónico</label>
      <input type="email" id="email" name="email" required
        class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 focus:ring-2 focus:ring-yellow-400 focus:outline-none">
    </div>

    <div>
      <label for="phone" class="block text-sm font-medium mb-2">Número de teléfono</label>
      <input type="tel" id="phone" name="phone" required placeholder="+56 9 1234 5678"
        class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 focus:ring-2 focus:ring-yellow-400 focus:outline-none">
    </div>

    <div class="md:col-span-2">
      <label for="zipcode" class="block text-sm font-medium mb-2">Código postal</label>
      <input type="text" id="zipcode" name="zipcode" required placeholder="0000000"
        class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 focus:ring-2 focus:ring-yellow-400 focus:outline-none">
    </div>
  </div>

  <div>
    <label for="message" class="block text-sm font-medium mb-2">Mensaje</label>
    <textarea id="message" name="message" rows="5" required
      class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 focus:ring-2 focus:ring-yellow-400 focus:outline-none"></textarea>
  </div>

  <button type="submit"
    class="w-full bg-yellow-500 hover:bg-yellow-400 text-black font-semibold px-6 py-3 rounded-lg transition">
    Enviar mensaje
  </button>
</form>
---
export interface Props {
  src: string;
  type?: string;
  class?: string;
  autoplay?: boolean;
  muted?: boolean;
  loop?: boolean;
  playsinline?: boolean;
}

const { src, type = 'video/webm', class: className = '', autoplay = true, muted = true, loop = true, playsinline = true } = Astro.props;
---

<video
  class={className}
  autoplay={autoplay}
  muted={muted}
  loop={loop}
  playsinline={playsinline}
>
  <source src={src} type={type} />
  Tu navegador no soporta videos.
</video>
